<Window x:Class="snakespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:snakespace"
        mc:Ignorable="d"
        Title="MainWindow" Height="647" Width="459"
        KeyUp = "Window_KeyUp"
        Background="White">

    <Grid>
        <Button Width="100" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="30,30,30,30" Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="{StaticResource img_Restart}" Stretch="Fill"/>

            </StackPanel>
        </Button>
        
        <Image Height="400" Width="400" Source="{StaticResource BG}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="26,25,25,0" />
        <Image Height="300" Width="300" Source="{StaticResource img_GameOver}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="26,200,25,0" Name="img_GameOver" />
        
        <Canvas HorizontalAlignment="Center" Height="400" VerticalAlignment="Top" Width="400" Name="GameCanvas" Margin="26,25,25,0">
        </Canvas>
        <Label Content="Lentgth: " HorizontalAlignment="Left" Margin="45,486,0,0" VerticalAlignment="Top" Name ="Text_Length" Opacity="0"/>
    </Grid>
</Window>
